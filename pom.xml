<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  
  <groupId>cl.kibernumacademy.app</groupId>
  <artifactId>carritocompra</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>carritocompra</name>
  <description>probando un carrito con junit4</description>
    <properties>
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>
    </properties>


    <dependencies>
	  <!-- https://mvnrepository.com/artifact/junit/junit -->
	<dependency>
	    <groupId>junit</groupId>
	    <artifactId>junit</artifactId>
	    <version>4.13.1</version>
	    <scope>test</scope>
	</dependency>

  </dependencies>
    <build>
        <plugins>

            <!-- Ciclo de vida de compilación -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.0</version>
                <configuration>
                    <source>11</source>
                    <target>11</target>
                </configuration>
            </plugin>

            <!-- Ciclo de vida de empaquetado -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.2.0</version>
                <configuration>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <mainClass>miapp.ControlPruebaMain</mainClass>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>

            <!-- Ciclo de vida de pruebas -->
            <!-- El plugin maven-surefire-plugin es usado por defecto en esta fase, así que no necesita ser incluido explícitamente a menos que quieras cambiar su configuración por defecto -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>3.0.0</version>
            </plugin>


        </plugins>
    </build>
</project>